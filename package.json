{
  "name": "shipit-bastion",
  "version": "0.0.1",
  "description": "This package adds support for bastion or jump hosts to the shipit deploy tasks",
  "main": "./lib/index.js",
  "scripts": {
    "prettier": "echo 'Applying prettier....' && prettier --write \"{src,test}/**/*.{js,jsx,css,scss,graphql}\" > /dev/null  && exit 0",
    "clean": "rimraf lib",
    "test": "npm run lint && npm run cover",
    "test:prod": "cross-env BABEL_ENV=production npm run test",
    "test:only": "mocha --require babel-core/register --require babel-polyfill --recursive",
    "test:watch": "npm test -- --watch",
    "test:examples": "node examples/",
    "cover": "istanbul cover _mocha -- --require babel-core/register --require babel-polyfill --recursive",
    "lint": "eslint src test",
    "build": "cross-env BABEL_ENV=production babel src --out-dir lib",
    "prepublishOnly": "npm run clean && npm run lint && npm run test && npm run build"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrokerageEngine/shipit-bastion.git"
  },
  "keywords": [
    "shipit",
    "automation",
    "deployment",
    "bastion",
    "proxy",
    "forwardAgent",
    "proxyCommand",
    "ssh"
  ],
  "author": "Brokerage Engine, Inc <npm@brokerageengine.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BrokerageEngine/shipit-bastion/issues"
  },
  "homepage": "https://github.com/BrokerageEngine/shipit-bastion#readme",
  "devDependencies": {

    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "eslint": "^5.14.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "istanbul": "^1.0.0-alpha",
    "mocha": "^6.0.1",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "ssh-proxy-pool": "../ssh-proxy-pool",
    "shipit-utils": "^1.4.1"
  }
}
